<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_self"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/collection_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/download_pb"
        android:layout_width="300dp"
        android:layout_height="5dp"
        android:layout_below="@+id/collection_item_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:progressDrawable="@drawable/progressbar_bg"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />
    <TextView
        android:id="@+id/pause_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collection_item_title"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:textSize="10sp"
        android:textColor="@color/light_dark"
        android:text="@string/pauseDownload"
        android:visibility="invisible"
        tools:ignore="SmallSp" />
    <!--在暂停时会出现，改为visible-->

    <ImageView
        android:id="@+id/delete_iv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingEnd="10dp"
        android:src="@drawable/ic_delete_black_24dp" />

</RelativeLayout>